---
apiVersion: helm.toolkit.fluxcd.io/v2beta1
kind: HelmRelease
metadata:
  name: &app snapserver
  namespace: radio
spec:
  interval: 15m
  chart:
    spec:
      chart: app-template
      version: 1.5.1
      sourceRef:
        kind: HelmRepository
        name: bjw-s-charts
        namespace: flux-system

  maxHistory: 3

  install:
    remediation:
      retries: 3

  upgrade:
    cleanupOnFail: true
    remediation:
      retries: 3

  uninstall:
    keepHistory: false

  values:
    controller:
      type: statefulset

    image:
      repository: docker.io/saiyato/snapserver
      tag: v0.26.0
      pullPolicy: IfNotPresent

    service:
      main:
        annotations:
          io.cilium/lb-ipam-ips: ${SVC_SNAPSERVER_ADDR}
        type: LoadBalancer
        externalTrafficPolicy: Cluster
        ports:
          http:
            port: 80
          audio:
            port: 1704
          control:
            port: 1705
          stream1:
            port: 4955

    resources:
      requests:
        cpu: 15m
        memory: 64M
      limits:
        memory: 64M
