---
apiVersion: helm.toolkit.fluxcd.io/v2beta1
kind: HelmRelease
metadata:
  name: portainer
  namespace: monitoring
spec:
  interval: 15m
  chart:
    spec:
      chart: portainer
      version: 1.0.x
      sourceRef:
        kind: HelmRepository
        name: portainer-charts
        namespace: flux-system
      interval: 15m

  values:
    ingress:
      enabled: true
      hosts:
        - host: &host "portainer.${SECRET_DOMAIN}"
          paths:
            - path: /
              pathType: Prefix
      tls:
        - hosts:
            - *host

    persistence:
      enabled: true
      existingClaim: portainer-pvc


       # size: "5Gi"
     # storageClass: "local-path"
     # persistentVolumeReclaimPolicy: retain
     # volumeName: portainer
